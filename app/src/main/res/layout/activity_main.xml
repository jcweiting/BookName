<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/home"
        android:background="@color/dark_blue2C4355"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <ImageView
        android:id="@+id/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/search"
        android:background="@color/light_grey"
        android:src="@drawable/home"
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="60dp"/>

    <ImageView
        android:id="@+id/search"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintLeft_toRightOf="@+id/home"
        app:layout_constraintRight_toLeftOf="@+id/heart"
        android:background="@color/light_grey"
        android:src="@drawable/loupe"
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="60dp"/>

    <ImageView
        android:id="@+id/heart"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintLeft_toRightOf="@+id/search"
        app:layout_constraintRight_toLeftOf="@+id/cart"
        android:background="@color/light_grey"
        android:src="@drawable/heart"
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="60dp"/>

    <ImageView
        android:id="@+id/cart"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintLeft_toRightOf="@+id/heart"
        app:layout_constraintRight_toLeftOf="@+id/member"
        android:background="@color/light_grey"
        android:src="@drawable/cart"
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="60dp"/>

    <ImageView
        android:id="@+id/member"
        app:layout_constraintBottom_toBottomOf="@+id/home"
        app:layout_constraintLeft_toRightOf="@+id/cart"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/light_grey"
        android:src="@drawable/user"
        android:padding="15dp"
        android:layout_width="0dp"
        android:layout_height="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>