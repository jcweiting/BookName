<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#B3EAEAEA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.book.second_book_exchange.widget.BookTreeTextView
        android:id="@+id/show_role"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="SHOW ROLE EMAIL"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.book.second_book_exchange.widget.BookTreeTextView
        android:id="@+id/book_name"
        app:layout_constraintTop_toBottomOf="@id/show_role"
        app:layout_constraintLeft_toLeftOf="@+id/show_role"
        android:layout_marginLeft="20dp"
        android:text="SHOW BOOK NAME"
        android:textSize="15sp"
        android:layout_marginTop="25sp"
        android:textColor="@color/dark_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.book.second_book_exchange.widget.BookTreeTextView
        android:id="@+id/shipment"
        app:layout_constraintTop_toBottomOf="@id/book_name"
        app:layout_constraintLeft_toLeftOf="@+id/book_name"
        android:text="運送方式: "
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.book.second_book_exchange.widget.BookTreeTextView
        android:id="@+id/more_details"
        android:text="更多詳情..."
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/shipment"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>