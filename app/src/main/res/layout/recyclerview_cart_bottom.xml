<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#B3EAEAEA"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.book.second_book_exchange.widget.BookTreeTextView
        android:id="@+id/way"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/spinner_back"
        android:gravity="center"
        android:text="請選擇運送方式"
        android:textColor="@color/dark_grey"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <com.book.second_book_exchange.widget.BookTreeTextView
        android:id="@+id/amount"
        android:text="小計"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/way"
        app:layout_constraintRight_toRightOf="@+id/way"
        app:layout_constraintBottom_toTopOf="@+id/shipment"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="wrap_content"/>

    <com.book.second_book_exchange.widget.BookTreeTextView
        android:id="@+id/shipment"
        android:text="運費"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        app:layout_constraintRight_toRightOf="@+id/way"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="wrap_content"/>

    <com.book.second_book_exchange.widget.BookTreeTextView
        android:id="@+id/sum"
        android:text="總金額(含運費)"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/shipment"
        app:layout_constraintRight_toRightOf="@+id/way"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>